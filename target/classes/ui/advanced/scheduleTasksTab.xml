<tab text="i18n.tab.schedule.tasks" icon="/icons/big_Task.png" name=":taskLog">
	<panel bottom="10" columns="1" gap="10" left="10" right="10" top="10">
	    <table name="taskList" selection="multiple" weightx="1" weighty="1" action="enableTaskActions" focusgained="enableTaskActions">
	        <header>
	            <column width="18"/>
	            <column icon="/icons/group.png" text="i18n.common.send.to" width="109"/>
	            <column icon="/icons/date_time_start.png" text="i18n.common.from" width="120"/>
	            <column icon="/icons/date_time_end.png" text="i18n.common.until" width="120"/>
	            <column icon="/icons/frequency.png" text="i18n.common.frequency" width="124"/>
	            <column icon="/icons/task_next_execution.png" text="i18n.common.next.execution" width="120"/>
	            <column icon="/icons/message.png" text="i18n.common.text" width="120"/>
	        </header>
	        <popupmenu name="menu">
	            <menuitem icon="/icons/task_edit.png" name="miEdit" text="i18n.action.edit"/>
	            <menuitem action="removeSelectedTasks(taskList)" icon="/icons/task_delete.png" name="miDelete" text="i18n.action.delete.selected"/>
	            <separator/>
	            <menuitem action="showScheduleTaskDialog" icon="/icons/task.png" name="miNewTask" text="i18n.action.create.task"/>
	        </popupmenu>
	    </table>
	    <panel gap="5">
	        <button action="showScheduleTaskDialog" icon="/icons/big_task_add.png" name="btTask" text="i18n.action.create.task" weightx="1"/>
	        <button icon="/icons/big_task_edit.png" name="btEdit" text="i18n.action.edit" weightx="1"/>
	        <button action="removeSelectedTasks(taskList)" icon="/icons/big_task_delete.png" name="btDelete" text="i18n.action.delete.selected" weightx="1"/>
	    </panel>
	</panel>
</tab>
