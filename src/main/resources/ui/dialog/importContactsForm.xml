<?xml version="1.0" encoding="ISO-8859-1"?>
<dialog closable="true" bottom="5" close="removeDialog(this)" columns="3" font="bold" gap="5" icon="/icons/importContacts.png" left="5" modal="true" name="importContactsDialog" right="5" text="i18n.common.import" top="5">
    <panel bottom="5" columns="1" gap="5" left="5" right="5" top="5" weightx="1" weighty="1">
        <panel bottom="3" colspan="2" gap="5" top="3">
            <label text="i18n.common.directory"/>
            <textfield columns="45" name="tfDirectory" weightx="1"/>
            <button action="showOpenModeFileChooser(tfDirectory)" icon="/icons/browse.png" text="i18n.action.browse" weightx="1"/>
        </panel>
        <panel colspan="2" gap="5" halign="center">
            <button action="doImport(importContactsDialog, tfDirectory.text)" icon="/icons/importContacts.png" text="i18n.common.import"/>
            <button action="removeDialog(importContactsDialog)" icon="/icons/cross.png" text="i18n.action.cancel"/>
        </panel>
    </panel>
</dialog>
