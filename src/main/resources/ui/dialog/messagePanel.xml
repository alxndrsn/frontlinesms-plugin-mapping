<?xml version="1.0" encoding="ISO-8859-1"?>
<panel name="pnMessage" columns="1" gap="2">
    <panel gap="5" weightx="1">
        <label text="i18n.sentence.remaining.characters"/>
        <label font="bold" name="lbRemainingChars" text="160"/>
        <panel gap="2" halign="right" weightx="1">
            <label font="11 bold" name="lbMsgNumber" text="0"/>
            <label icon="/icons/sms_disabled.png" name="lbFirst"/>
            <label icon="/icons/sms_disabled.png" name="lbSecond"/>
            <label icon="/icons/sms_disabled.png" name="lbThird"/>
        </panel>
    </panel>
    <textarea action="messageChanged(pnMessage, this.text)" rows="10" columns="40" name="tfMessage"/>
    <panel name="pnBottom" gap="13" weightx="1">
        <panel halign="left" weightx="1">
            <button icon="/icons/sms_send.png" name="btSend" text="i18n.common.send" enabled="false"/>
        </panel>
        <panel gap="11" halign="right" top="3" weightx="1">
            <label icon="/icons/money.png" text="i18n.common.estimated.cost"/>
            <label font="bold" name="lbEstimatedMoney"/>
        </panel>
    </panel>
</panel>
