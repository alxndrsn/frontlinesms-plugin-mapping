<dialog name="dialogReportDetails" text="i18n.plugins.ushahidi.report" icon="/icons/report.png" modal="true" closable="true" close="removeDialog(this)" gap="10" top="3" right="3" bottom="3" left="3">
   <panel columns="2" gap="10" top="3" right="3" bottom="3" left="3">
      	<label text="i18n.plugins.ushahidi.report.title" icon="/icons/title.png" valign="top" />
		<textfield name="txtReportTitle" weightx="1" editable="false"/>
       
		<label text="i18n.plugins.ushahidi.report.description" icon="/icons/description.png" valign="top" />
		<textarea name="txtReportDescription" columns="55" rows="10" editable="false"/>
       
		<label text="i18n.plugins.ushahidi.report.categories" icon="/icons/categories.png" valign="top" />
		<textarea name="txtReportCategories" columns="55" rows="2" editable="false"/>
       	<list name="lstReportCategories" selection="multiple" />
       	
		<label text="i18n.plugins.ushahidi.report.date" icon="/icons/date.png" valign="top" />
		<panel weightx="1" gap="5">
			<textfield name="txtReportDate" weightx="1" editable="false"/>
       		<button name="btnReportDate" action="showDateSelecter(txtReportDate)" icon="/icons/date.png" />
		</panel>
		
		<label text="i18n.plugins.ushahidi.report.location" icon="/icons/map.png" valign="top" />
		<textfield name="txtReportLocation" weightx="1" editable="false" />
		<panel name="pnlReportLocation" columns="2" weightx="1" visible="false" gap="5">
			<checkbox name="cbxExistingLocation" text="i18n.plugins.ushahidi.location.existing" group="location" selected="true" action="showExistingLocations"/>
			<checkbox name="cbxNewLocation" text="i18n.plugins.ushahidi.location.new" group="location" action="showNewLocation"/>
			<panel name="pnlExistingLocation" colspan="2" columns="1" weightx="1" visible="true">
				<combobox name="cboReportLocations" editable="false" weightx="1" action="locationChanged(this,txtReportCoordinates)"></combobox>
			</panel>
			<panel name="pnlNewLocation" colspan="2" columns="2" weightx="1" gap="5" visible="false">
				<textfield name="txtNewLocation" weightx="1" editable="true" />
				<button name="btnSelectPoint" text="i18n.plugins.ushahidi.map.select.point" type="link" action="selectLocationFromMap(dialogReportDetails)"/>
			</panel>
		</panel>
		
		<label text="i18n.plugins.ushahidi.report.coordinates" icon="/icons/coordinates.png" valign="top" />
		<textfield name="txtReportCoordinates" columns="50" weightx="1" editable="false"/>
       
       	<label name="lblPhotos" text="i18n.plugins.ushahidi.report.photos" icon="/icons/photos.png" valign="top" />
       	<list name="lstPhotos" selection="single" weightx="1" weighty="1" height="500"/>
       	<panel name="pnlAddPhoto" columns="2" gap="5" visible="false">
       		<textfield name="txtAddPhoto" weightx="1" editable="false" />
       		<button name="btnAddPhoto" text="i18n.plugins.ushahidi.browse.file" icon="/icons/browse.png" action="showFileChooser(txtAddPhoto)"/>
       	</panel>
       	
		<label name="lblSenderName" text="i18n.plugins.ushahidi.sender.name" icon="/icons/user.png" valign="top"/>
 		<textfield name="txtSenderName" columns="50" />
 		
 		<label name="lblSenderEmail" text="i18n.plugins.ushahidi.sender.email" icon="/icons/email.png" valign="top"/>
 		<textfield name="txtSenderEmail" columns="50" />
 		
 		<label name="lblSyncStatus" text="i18n.plugins.ushahidi.sync.status" icon="/icons/sync_error.png" valign="top"/>
 		<textarea name="txtSyncStatus" columns="50" rows="3" editable="false" />
 		
 		<button name="btnCancel" icon="/icons/cross.png" text="i18n.action.cancel" action="removeDialog(dialogReportDetails)" weightx="1"/>
 		<button name="btnSave" icon="/icons/tick.png" text="i18n.action.save" action="saveReport(dialogReportDetails)" weightx="1"/>	
 		
 		<button name="btnClose" icon="/icons/cross.png" text="i18n.action.close" action="removeDialog(dialogReportDetails)" colspan="2" weightx="1"/>	
	</panel> 
</dialog>