<dialog text="" name="reportDetails_Dialog" modal="true" closable="true" close="removeDialog(this)" gap="10" top="3" right="3" bottom="3" left="3">
   <panel columns="2" gap="5" top="3" right="3" bottom="3" left="3">
       <label text="i18n.plugins.ushahidi.incident.title" valign="top" />
       <textfield name="txtReportTitle" columns="50" editable="false"/>
       
       <label text="i18n.plugins.ushahidi.incident.description" valign="top" />
       <textarea name="txtReportDescription" columns="50" rows="10" editable="false"/>
       
       <label text="i18n.plugins.ushahidi.incident.categories" valign="top" />
       <textarea name="txtReportCategories" columns="50" rows="2" editable="false"/>
       
       <label text="i18n.plugins.ushahidi.incident.date" valign="top" />
       <textfield name="txtReportDate" columns="50" weightx="1" editable="false"/>
       
       <label text="i18n.plugins.ushahidi.incident.location" valign="top" />
       <textfield name="txtReportLocation" columns="50" weightx="1" editable="false"/>
       
       <label text="i18n.plugins.ushahidi.incident.coordinates" valign="top" />
       <textfield name="txtReportCoordinates" columns="50" weightx="1" editable="false"/>
       
       <label text="i18n.plugins.ushahidi.incident.verified" valign="top" />
       <checkbox name="cbxVerified" weightx="1" enabled="false"/>
       
       <panel colspan="2" gap="5" top="10" halign="center" weightx="1">
           <button icon="/icons/tick.png" text="i18n.action.save" action="saveReport(reportDetails_Dialog)"/>
           <button icon="/icons/cross.png" text="i18n.action.cancel" action="removeDialog(reportDetails_Dialog)" />
       </panel>
   </panel> 
</dialog>