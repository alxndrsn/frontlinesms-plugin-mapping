<tab icon="/icons/big_map.png" text="i18n.plugins.ushahidi" name=":mapping">
	<panel bottom="9" columns="2" gap="9" left="9" right="9" top="9" weightx="1" weighty="1">
		<label icon="/icons/header/mapManager.png" valign="top" />
		<splitpane divider="350" weightx="1" weighty="1" rowspan="2">
			<panel columns="1" weightx="1" weighty="1" left="9" right="9">
				<panel columns="1" border="true" text="i18n.plugins.ushahidi.filter.events" weightx="1">
					<panel name="pnlSearchParams" columns="1" top="5" bottom="5" left="5" right="5" weightx="1">
						<panel top="9" bottom="9" gap="18" weightx="1" left="9"	right="9">
							<checkbox text="i18n.common.all" icon="/icons/history.png" group="filter" 
								selected="true" action="messageFilterChanged(pnlSearchParams)"
								name="cbMfAll" />
							<checkbox text="i18n.common.keywords" icon="/icons/keyword.png" group="filter" action="messageFilterChanged(pnlSearchParams)" name="cbMfKeywords" />
							<checkbox text="i18n.common.date" icon="/icons/date.png" group="filter" action="messageFilterChanged(pnlSearchParams)" name="cbMfDate" />
						</panel>
						<table name="tblKeywords" weightx="1" height="10000" visible="false" action="mappingTab_keywordSelectionChanged(tblKeywords)">
							<header>
								<column width="25" />
								<column icon="/icons/keyword.png" text="i18n.plugins.ushahidi.title" />
							</header>
						</table>
						<panel name="pblMfDate" weightx="1" visible="false" gap="5" halign="center">
							<label icon="/icons/date_start.png" text="i18n.plugins.ushahidi.date.from" />
							<panel gap="5">
								<textfield action="messageFilterDateChanged" columns="10" name="tfMfStartDate" />
								<button action="showDateSelector(tfMfStartDate)" icon="/icons/date.png" />
							</panel>
							<label icon="/icons/date_end.png" text="i18n.plugins.ushahidi.date.to" />
							<panel gap="5">
								<textfield action="messageFilterDateChanged" columns="10" name="tfMfEndDate" />
								<button action="showDateSelector(tfMfEndDate)" icon="/icons/date.png" />
							</panel>
						</panel>
					</panel>
				</panel>
				<panel top="10" weightx="1" weighty="1">
					<table name="messageTable" weightx="1" weighty="1" perform="showIncidentDialog(item)">
						<header>
							<column icon="/icons/time.png" text="i18n.common.date" width="100" />
							<column icon="/icons/keyword.png" text="i18n.common.sender"	width="100" />
							<column icon="/icons/user_sender.png" text="i18n.common.message" width="100" />
						</header>
					</table>
				</panel>
				<panel weightx="1" top="9" gap="10" columns="2">
					<button icon="/icons/map_setup.png" text="i18n.plugins.ushahidi.setup" action="showSetupDialog" weightx="1" />
					<button icon="/icons/map_sync.png" text="i18n.plugins.ushahidi.synchronize" action="beginSynchronization" weightx="1"/>
				</panel>
			</panel>
			<panel columns="1" weightx="1" weighty="1" text="i18n.plugins.ushahidi.incidents" border="true" gap="5" top="9" bottom="9" left="9" right="9">
				<panel weightx="1" gap="10" columns="2">
					<checkbox name="cbxIncidentMap" text="i18n.plugins.ushahidi.view.map" icon="/icons/map.png" group="view" selected="true" action="showIncidentMap" />
					<checkbox name="cbxIncidentList" text="i18n.plugins.ushahidi.view.reports" icon="/icons/report.png" group="view" action="showIncidentReports" />
				</panel>
				<panel name="pnlViewIncidents" columns="1" weightx="1" weighty="1">
					
				</panel>
			</panel>
		</splitpane>
		<button tooltip="i18n.tooltip.click.for.help" valign="bottom"
			icon="/icons/big_help.png" type="link" />
	</panel>
</tab>