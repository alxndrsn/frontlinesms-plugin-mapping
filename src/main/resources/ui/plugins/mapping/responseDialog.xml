<dialog name="dlgResponse" modal="true" closable="true" close="removeDialog(this)" gap="15" top="3" right="3" bottom="3" left="3">
	<panel columns="2" gap="5" top="3" right="3" bottom="3" left="3">
      	<label text="i18n.common.name" icon="/icons/user.png" valign="top" />
      	<textfield name="txtContactName" columns="50" editable="false"/>
      	
      	<label text="i18n.common.phone" icon="/icons/phone.png" valign="top" />
      	<textfield name="txtContactPhone" columns="50" editable="false"/>
      	
      	<label text="i18n.plugins.ushahidi.location" icon="/icons/map.png" valign="top" />
      	<textfield name="txtLocation" columns="50" editable="false"/>
      	
      	<label text="i18n.plugins.ushahidi.incident.coordinates" icon="/icons/coordinates.png" valign="top" />
		<textfield name="txtCoordinates" columns="50" weightx="1" editable="false"/>
		
		<label name="lblDate" text="i18n.common.date" icon="/icons/date.png" valign="top" />
		<textfield name="txtDate" columns="50" weightx="1" editable="false" />
		
		<label name="lblMessage" text="i18n.common.message" icon="/icons/sms.png" valign="top" />
		<textarea name="txtMessage" columns="50" rows="3" weightx="1" editable="false"/>
		
		<table name="tblResponses" weightx="1" weighty="1" colspan="2">
			<header>
				<column width="200"/>
				<column width="200"/>
			</header>
		</table>
	
		<button name="btnClose" icon="/icons/cross.png" text="i18n.action.close" action="removeDialog(dlgResponse)" weightx="1" colspan="2"/>
	</panel>
</dialog>