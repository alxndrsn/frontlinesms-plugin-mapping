<?xml version="1.0" encoding="ISO-8859-1"?>
<dialog name="dialogMapSave" text="i18n.plugins.ushahidi.map.save" closable="true" close="removeDialog(this)" modal="true" columns="3" gap="5" icon="/icons/export.png" left="5" right="5" top="5" bottom="5">
    <label text="i18n.plugins.ushahidi.map.save.name"/>
    <textfield columns="40" name="tfMapName" perform="doMapSave(dialogMapSave, tfMapName.text)" weightx="2"/>
    <separator colspan="3"/>
    <separator rowspan="0"/>
    <button action="doMapSave(dialogMapSave, tfMapName.text)" halign="right" icon="/icons/tick.png" name="btDone" text="i18n.action.save"/>
    <button action="removeDialog(dialogMapSave)" icon="/icons/cross.png" text="i18n.action.cancel"/>
</dialog>
