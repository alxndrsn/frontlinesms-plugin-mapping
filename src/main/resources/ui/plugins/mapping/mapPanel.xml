<panel name="pnlMap" columns="1" weightx="1" weighty="1">
	<panel weightx="1" weighty="1" border="true">
		<bean name="mapBean" bean="com.ushahidi.plugins.mapping.ui.MapBean" weightx="1" weighty="1">
			<popupmenu name="menu">
			    <menu name="onlineMapsMenu" text="i18n.action.add.to.group"/>
			    <separator name="sp1"/>
			    <menuitem icon="/icons/tick.png" name="saveMap" text="i18n.action.save" action="saveMap" />		                    		                    
			</popupmenu>					
		</bean>
	</panel>
	<panel weightx="1" columns="4" gap="15" top="10">
		<checkbox text="i18n.plugins.ushahidi.point.data" icon="/icons/point_data.png" group="datatype" selected="true" action="showPointData" valign="center"/>
		<checkbox text="i18n.plugins.ushahidi.clustered.data" icon="/icons/clustered_data.png" group="datatype" action="showClusteredData" valign="center"/>
		<panel gap="5" valign="fill">
			<label text="i18n.plugins.ushahidi.map.zoom" valign="center"/>
			<slider height="2" width="80" minimum="1" unit="1" block="1" maximum="25" value="7" orientation="horizontal" name="sld_ZoomController" action="zoomMap(this)"/>		
		</panel>
		<panel gap="5" valign="fill">
			<label text="i18n.plugins.ushahidi.map.location" valign="center"/>	
			<label name="lblCoordinates" text="0.00000, 0.00000" valign="center"/>		
		</panel>
