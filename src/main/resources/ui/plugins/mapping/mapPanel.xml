<panel name="pnlMap" columns="1" weightx="1" weighty="1">
	<panel weightx="1" weighty="1" border="true">
		<bean name="mapBean" bean="com.ushahidi.plugins.mapping.ui.MapBean" weightx="1" weighty="1">
			<popupmenu name="menu">
			    <menu name="onlineMapsMenu" text="i18n.action.add.to.group"/>
			    <separator name="sp1"/>
			    <menuitem icon="/icons/tick.png" name="saveMap" text="i18n.plugins.ushahidi.map.save" action="saveMap" />		                    		                    
			</popupmenu>					
		</bean>
	</panel>
	<panel weightx="1" columns="3" gap="15" top="10" valign="fill">
		<panel gap="5" columns="2" valign="center">
			<label text="i18n.plugins.ushahidi.map.zoom" valign="center"/>
			<slider height="2" width="100" minimum="1" unit="1" block="1" maximum="25" value="7" orientation="horizontal" name="sldZoomController" action="zoomMap(this)"/>		
		</panel>
		<panel gap="5" columns="2" valign="center">
			<label text="i18n.plugins.ushahidi.map.location" valign="center"/>	
			<label name="lblCoordinates" text="0.00000, 0.00000" valign="center"/>		
		</panel>
		<panel gap="5" columns="2" weightx="1" valign="center">
			<label text="i18n.plugins.ushahidi.categories" for="cbxCategories" valign="center"/>
			<combobox name="cbxCategories" action="search(this)" editable="false" weightx="1" valign="center"/>
		</panel>
	</panel>
</panel>