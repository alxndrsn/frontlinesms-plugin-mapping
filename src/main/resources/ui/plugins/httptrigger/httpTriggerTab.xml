<tab icon="/icons/big_export.png" text="i18n.httptrigger.tab.label" name=":httpTrigger">
    <panel bottom="9" columns="2" gap="9" left="9" right="9" top="9" weightx="1" weighty="1">
    	<panel gap="9">
    		<label text="Port"/>
    		<textfield name="tfPort"/>
		   	<button text="Start" name="btStart" action="startListener(tfPort.text)" icon="/icons/month_up.png"/>
		   	<button text="Stop" name="btStop" action="stopListener" enabled="false" icon="/icons/delete.png"/>
	   </panel>
	   
		<list name="lsHttpTriggerLog" weightx="1" weighty="1" colspan="2"/>
       	<button action="removeAll(lsHttpTriggerLog)" icon="/icons/clear.png" name="btClear" text="i18n.action.clear"/>
	</panel>
</tab>
